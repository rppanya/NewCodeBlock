<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlocksActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menuButtonTop"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="350dp"
            android:src="@drawable/ic_baseline_menu_24" />

        <Button
            android:id="@+id/testButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="317dp"
            android:layout_marginRight="317dp"
            android:text="Button"
            app:layout_constraintBottom_toTopOf="@+id/rcView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menuButtonTop" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/purple_200"
        android:clickable="true"
        android:focusable="true"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="169dp"
        android:layout_height="163dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/addButton"
        app:layout_constraintEnd_toEndOf="@+id/addButton">

        <LinearLayout
            android:layout_width="91dp"
            android:layout_height="199dp"
            android:layout_marginEnd="28dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                style="@style/menu_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New variable" />

            <TextView
                android:id="@+id/textView4"
                style="@style/menu_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If else" />

            <TextView
                android:id="@+id/textView5"
                style="@style/menu_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open console" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="197dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnVariables"
                style="@style/menu_buttons"
                android:clickable="true"
                app:srcCompat="@drawable/ic_baseline_turned_in_not_24"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnIfElse"
                style="@style/menu_buttons"
                android:clickable="true"
                app:srcCompat="@drawable/ic_baseline_redo_24"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnOpenConsole"
                style="@style/menu_buttons"
                android:clickable="true"
                app:srcCompat="@drawable/ic_baseline_comment_24"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>