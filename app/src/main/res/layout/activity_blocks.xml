<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraint"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlocksActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-143dp"
        tools:layout_editor_absoluteY="-16dp">
        <TableLayout
            android:id="@+id/ButtonsTable"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@color/light_blue">

            <Button
                android:id="@+id/backButton"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/ic_baseline_arrow_back_ios_24" />

            <Button
                android:id="@+id/consoleButton"
                style="@style/custom_buttons"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="right"
                android:background="@color/dark_blue"
                android:text="CONSOLE"
                android:focusable="false"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/rcView"
                app:layout_constraintTop_toBottomOf="@+id/menuButtonTop" />

            <Button
                android:id="@+id/btnDebug"
                style="@style/custom_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="7dp"
                android:background="@color/dark_blue"
                android:focusable="false"
                android:text="DEBUG"
                app:layout_constraintBottom_toTopOf="@+id/rcView"
                app:layout_constraintTop_toBottomOf="@+id/menuButtonTop" />
        </TableRow>
    </TableLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/dark_blue"
        app:borderWidth="0dp"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="169dp"
        android:layout_height="163dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/addButton"
        app:layout_constraintEnd_toEndOf="@+id/addButton">

        <LinearLayout
            android:layout_width="91dp"
            android:layout_height="199dp"
            android:layout_marginEnd="28dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                style="@style/menu_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="New variable"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                style="@style/menu_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="If else"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView5"
                style="@style/menu_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Print"
                android:textStyle="bold"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="197dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnVariables"
                style="@style/menu_buttons"
                android:backgroundTint="@color/valBlockColorMenu"
                app:borderWidth="0dp"
                android:clickable="true"
                app:srcCompat="@drawable/ic_baseline_turned_in_not_24"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnIfElse"
                style="@style/menu_buttons"
                android:backgroundTint="@color/ifBlockColorMenu"
                app:borderWidth="0dp"
                android:clickable="true"
                app:srcCompat="@drawable/ic_baseline_redo_24"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnPrint"
                style="@style/menu_buttons"
                android:backgroundTint="@color/printBlockColorMenu"
                app:borderWidth="0dp"
                android:clickable="true"
                app:srcCompat="@drawable/ic_baseline_comment_24"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_console"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>